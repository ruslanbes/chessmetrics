{
  "manifest_version": 3,
  "name": "Chessmetrics",
  "version": "1.0.0",
  "description": "Chess position analysis and metrics for Lichess and Chess.com",
  "content_scripts": [{
    "matches": [
      "https://lichess.org/*",
      "https://www.chess.com/*"
    ],
    "js": ["chessmetrics.js"],
    "run_at": "document_end"
  }],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "permissions": []
}
