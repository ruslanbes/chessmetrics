{
  "name": "chessmetrics",
  "version": "1.0.0",
  "description": "Chessmetrics API server that analyzes chess positions and returns various calculated metrics",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run generate:registry && tsc",
    "generate:registry": "ts-node build-scripts/generate-metrics-registry.ts",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    
    "build:ui": "cd ui && npm run build",
    "build:ui-only": "cd ui && npm run build-only",
    "copy:chrome": "mkdir -p packages/chrome/ui && cp -r ui/dist/* packages/chrome/ui/",
    "copy:firefox": "mkdir -p packages/firefox/ui && cp -r ui/dist/* packages/firefox/ui/",
    "copy:userscript": "mkdir -p packages/userscript/ui && cp -r ui/dist/* packages/userscript/ui/",
    
    "build:chrome": "npm run build:ui && npm run copy:chrome && cd packages/chrome && npm run build",
    "build:firefox": "npm run build:ui && npm run copy:firefox && cd packages/firefox && npm run build",
    "build:userscript": "npm run build:ui && npm run copy:userscript && cd packages/userscript && npm run build",
    "build:all-packages": "npm run build:chrome && npm run build:firefox && npm run build:userscript",
    
    "watch:chrome": "cd packages/chrome && npm run watch",
    "watch:firefox": "cd packages/firefox && npm run watch",
    "watch:userscript": "cd packages/userscript && npm run watch",
    
    "package:chrome": "cd packages/chrome && npm run package",
    "package:firefox": "cd packages/firefox && npm run package",
    "package:all": "npm run package:chrome && npm run package:firefox",
    
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPatterns=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "echo \"Linting not configured yet\"",
    "clean": "rm -rf dist ui/dist ui/engine packages/*/ui packages/*/engine",
    "release": "npm run build && npm run build:all-packages && npm run package:all"
  },
  "keywords": [
    "chess",
    "metrics",
    "analysis",
    "api",
    "fen",
    "pgn"
  ],
  "author": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "chess.js": "^1.4.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/glob": "^9.0.0",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.1",
    "@types/supertest": "^6.0.3",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
